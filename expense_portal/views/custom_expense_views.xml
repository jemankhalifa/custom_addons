<?xml version="1.0" encoding="UTF-8"?>
<odoo>

    <record id="view_expense_form" model="ir.ui.view">
        <field name="name">expense.portal.form</field>
        <field name="model">expense.portal</field>
        <field name="arch" type="xml">
            <form>
                <sheet>
                    <header>
                        <button name="action_save" string="Save" type="object" class="btn-primary"
                                invisible="state != 'draft'"/>
                        <button name="action_submit" string="Submit to Manager" type="object"
                                class="btn-secondary"
                                invisible="state != 'draft'"/>
                        <button name="action_cancel" string="Cancel" type="object" class="btn-danger"
                                invisible="state != 'draft'"/>
                        <field name="state" widget="statusbar"/>
                    </header>
                    <group>
                        <field name="employee_id" readonly="1"/>
                        <field name="amount" readonly="state not in ['save']"/>
                        <field name="date" readonly="state not in ['save']"/>
                        <field name="note" readonly="state not in ['save']"/>
                        <field name="state" readonly="1"/>
                    </group>
                </sheet>
            </form>
        </field>
    </record>

    <record id="view_expense_list" model="ir.ui.view">
        <field name="name">expense.list</field>
        <field name="model">expense.portal</field>
        <field name="arch" type="xml">
            <list>
                <field name="employee_id"/>
                <field name="amount"/>
                <field name="date"/>
                <field name="note"/>
                <field name="state"/>
                <field name="expense_id"/>
            </list>
        </field>
    </record>

    <record id="action_expense_portal" model="ir.actions.act_window">
        <field name="name">Expense Portal</field>
        <field name="res_model">expense.portal</field>
        <field name="view_mode">form,list</field>
    </record>

    <menuitem id="menu_expense_portal_root"
              name="Expense Portal"
              web_icon="expense_portal/static/description/icon.png"/>

    <menuitem id="menu_expense_portal"
              name="Expense Portal"
              parent="menu_expense_portal_root"/>

    <menuitem id="expense_portal"
              name="Expenses"
              parent="menu_expense_portal"
              action="action_expense_portal"
              sequence="1"/>


</odoo>
