<?xml version="1.0" encoding="UTF-8"?>
<odoo>
    <template id="portal_my_expenses" name="My Expenses">
        <t t-call="hr_expense_portal.portal_header_common"/>
        <t t-call="website.layout">
        <t t-set="no_footer" t-value="True"/>
        <t t-set="no_header" t-value="True"/> 
            <div class="container">
                <a href="/my/expense/create" style ="margin-top:10px;" class="btn btn-info">Create New Expense</a>
                <h3>My Expenses</h3>
                <table class="table-striped table">
                    <thead>
                        <tr>
                            <th>Employee</th>
                            <th>Amount</th>
                            <th>Date</th>
                            <th>Status</th>
                            <th>Edit</th>
                        </tr>
                    </thead>
                    <tbody>
                        <t t-foreach="expenses" t-as="expense">
                            <tr>
                                <td><t t-esc="expense.name"/></td>
                                <td><t t-esc="expense.amount"/></td>
                                <td><t t-esc="expense.date"/></td>
                                <td><t t-esc="expense.state"/></td>
                                <td>
                                    <t t-if="expense.state == 'draft'">
                                        <a t-att-href="'/my/expense/edit/%s' % expense.id" class="btn btn-info">Edit</a>
                                </t>
                                </td>
                            </tr>
                        </t>
                    </tbody>
                </table>
            </div>
        </t>
    </template>

    <template id="portal_create_expense_form" name="Create Expense Form">
    <t t-call="hr_expense_portal.portal_header_common"/>
    <t t-call="website.layout">
    <t t-set="no_footer" t-value="True"/>
    <t t-set="no_header" t-value="True"/>
        <div class="container mt-5">
            <h3>Create New Expense</h3>
              <style>
                .form-control:hover {
                    border-color: #0d6efd;
                    box-shadow: 0 0 0 0.2rem rgba(13,110,253,.25);
                    transition: all 0.3s ease-in-out;
                }

                textarea:focus, input:focus {
                    outline: none;
                    box-shadow: 0 0 0 0.2rem rgba(40, 167, 69, 0.25);
                }

                .btn-success:hover {
                    background-color: #198754;
                    box-shadow: 0 4px 8px rgba(0, 0, 0, 0.2);
                }

                .card {
                    transition: transform 0.3s ease-in-out;
                }

                .card:hover {
                    transform: translateY(-5px);
                }
            </style>

            <!-- FORM -->
            <div class="card shadow-sm border rounded p-4 bg-white mt-4">
                <form action="/my/expense/submit" method="post"  enctype="multipart/form-data">
                    <input type="hidden" name="csrf_token" t-att-value="request.csrf_token()"/>
                    
                     <t t-if="error_message">
                        <div class="alert alert-danger" role="alert">
                            <t t-esc="error_message"/>
                        </div>
                    </t>

                    <div class="form-group mb-3">
                        <label><i class="fa fa-user me-1 text-primary"></i>Employee Name</label>
                        <input type="text" name="employee" t-att-value="employee_name" class="form-control border-primary" readonly="readonly"/>
                    </div>

                    <div class="form-group mb-3">
                        <label><i class="fa fa-money-bill me-1 text-success"></i>Amount</label>
                        <input type="number" name="amount" class="form-control border-success" required="required"/>
                    </div>

                    <div class="form-group mb-3">
                        <label><i class="fa fa-wallet me-1 text-info"></i> Remaining Balance</label>
                        <input type="text" name="remaining_balance" id="remaining_balance" class="form-control border-info" readonly="readonly"
                        t-att-value="str(remaining_balance)"/>
                    </div>


                    <div class="form-group mb-3">
                        <label><i class="fa fa-calendar-alt me-1 text-info"></i>Date</label>
                        <input type="date" name="date" class="form-control border-info" required="required"/>
                    </div>

                    <div class="form-group mb-3">
                        <label><i class="fa fa-comment me-1 text-warning"></i>Notes</label>
                        <textarea name="notes" class="form-control border-warning" rows="3"></textarea>
                    </div>

                    <div class="form-group mb-3">
                        <label><i class="fa fa-paperclip me-1 text-secondary"></i>Attachment</label>
                        <input type="file" name="attachment" class="form-control border-secondary"/>
                    </div>

                    <button type="submit" class="btn btn-success mt-2 px-4">
                        <i class="fas fa-save"></i>Save
                    </button>
                    <button type="submit"  name="action" value="submit" class="btn btn-success mt-2 px-4">
                        <i class="fa fa-paper-plane me-1"></i>Submit
                    </button>

                </form>
            </div>
        </div>
    </t>

</template>

<template id="edit_expense_template" name="Edit Expense">
    <t t-call="hr_expense_portal.portal_header_common"/>
    <t t-call="website.layout">
    <t t-set="no_footer" t-value="True"/>
    <t t-set="no_header" t-value="True"/>
    <div class="container">
    <h3>Modify expense request</h3>
      <form method="POST" action="/my/expense/update" enctype="multipart/form-data">

        <t t-if="error_message">
            <div class="alert alert-danger" role="alert">
                <t t-esc="error_message"/>
            </div>
        </t>
        <input type="hidden" name="expense_id" t-att-value="expense.id"/>
        <div class="form-group">
        </div>
         <div class="form-group mb-3">
            <label><i class="fa fa-user me-1 text-primary"></i>Employee Name</label>
            <input type="text" name="employee" t-att-value="employee_name" class="form-control border-primary" readonly="readonly"/>
        </div>

        <div class="form-group mb-3">
            <label><i class="fa fa-money-bill me-1 text-success"></i>Amount</label>
            <input type="number" name="amount" t-att-value="amount" class="form-control border-success" required="required"/>
        </div>
        <div class="form-group mb-3">
            <label><i class="fa fa-wallet me-1 text-info"></i> Remaining Balance</label>
            <input type="text" name="remaining_balance" id="remaining_balance" class="form-control border-info" readonly="readonly"
            t-att-value="str(remaining_balance)"/>
        </div>

        <div class="form-group mb-3">
            <label><i class="fa fa-calendar-alt me-1 text-info"></i>Date</label>
            <input type="date" name="date" t-att-value="date" class="form-control border-info" required="required"/>
        </div>

        <div class="form-group mb-3">
            <label><i class="fa fa-comment me-1 text-warning"></i>Notes</label>
            <textarea name="notes" t-att-value="note" class="form-control border-warning" rows="3"></textarea>
        </div>

        <div class="form-group mb-3">
            <label><i class="fa fa-paperclip me-1 text-secondary"></i>Attachment</label>
            <input type="file" name="attachment" class="form-control border-secondary"/>
        </div>
       <button type="submit" class="btn btn-success mt-2 px-4">
            <i class="fas fa-save"></i>Save
        </button>
        <button type="submit"  name="action" value="submit" class="btn btn-success mt-2 px-4">
            <i class="fa fa-paper-plane me-1"></i>Submit
        </button>

      </form>
    </div>
  </t>
</template>


</odoo>
