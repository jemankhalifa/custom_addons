<odoo>

<template id="portal_header_common" name="Portal Header">
  <div class="d-flex justify-content-between align-items-center p-3 bg-light border-bottom mb-4">
    <a href="javascript:history.back()" class="btn btn-outline-secondary">
      <i class="fa fa-arrow-left me-1"></i> Back
    </a>
    <a href="/web/session/logout" class="btn btn-outline-danger">
      <i class="fa fa-sign-out-alt me-1"></i> Logout
    </a>
  </div>
</template>

<template id="portal_dashboard_template" name="Dashboard Page">
    <t t-call="hr_expense_portal.portal_header_common"/>
    <t t-call="website.layout">
    <t t-set="no_footer" t-value="True"/>
    <t t-set="no_header" t-value="True"/>
        <div class="container mt-4">
            <h2 class="mb-4">Dashboard</h2>
            
            <ul class="nav nav-tabs">
                <li class="nav-item">
                    <a class="nav-link" href="/my/expenses">Expenses</a>
                </li>
            </ul>

            <div class="mt-4">
                <p>Welcome to your dashboard. Use the menu above to navigate.</p>
            </div>
        </div>
    </t>
</template>

</odoo>

