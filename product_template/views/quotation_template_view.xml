
<odoo>
    <data>
        <record id="sale_order_template_form_view" model="ir.ui.view">
            <field name="name">sale.order.template.form</field>
            <field name="model">sale.order.template</field>
            <field name="inherit_id" ref="sale_subscription.sale_subscription_template_view_form"/>
            <field name="arch" type="xml">
                <xpath expr="//field[@name='plan_id']" position="after">
                    <group>
                        <field name="capacity"/>
                        <field name="current_capacity" readonly="1"/>
                    </group>
                </xpath>
            </field>
        </record>
    </data>
</odoo>
