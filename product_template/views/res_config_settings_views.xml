<odoo>
    <record id="view_res_config_settings_inherit" model="ir.ui.view">
        <field name="name">sale.subscription.settings.inherit</field>
        <field name="model">res.config.settings</field>
        <field name="inherit_id" ref="sale_subscription.res_config_settings_view_form"/>
        <field name="arch" type="xml">
            <xpath expr="//sheet" position="inside">
                <div class="mt16">
                <group>
                    <label for="restrict_based_on_capacity"/>
                    <field name="restrict_based_on_capacity"/>
                    </group>
                </div>
            </xpath>
        </field>
    </record>
</odoo>
